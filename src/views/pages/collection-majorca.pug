extends ../layouts/master.pug

block title
  title Casa Bianca | Коллекции

block basicSeo
  meta(name='description' content='Collections page')
  meta(name='keywords', content='collections, page')

block manifestBrowserconfigFiles
  link(href='../manifest.json', rel='manifest')
  meta(name='msapplication-config' content='../browserconfig.xml')

block content

  +header('collection')

  .barba(data-barba="wrapper")
    main(data-barba="container" data-barba-namespace="collection").gapper
      include ../mixins/hero-item-small.pug
      +hero-item-small('/assets/images/collection-majorca/collection-bg.png', '', '/assets/images/collection-majorca/majorca.svg', 'majorca')
      include ../mixins/breadscrumbs.pug
      +breadscrumbs(
        [
          {
            href: '/collections',
            title: 'Коллекции',
          },
          {
            href: '',
            title: 'Majorca Tiffany',
          }
        ]
      )
      include ../components/collection-majorca.pug
      include ../components/contacts.pug